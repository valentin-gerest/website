---
import { type HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"img"> {
  size?: "md" | "lg";
}

const { size = "md", class: className, ...props } = Astro.props;

const sizes = {
  md: "w-16 border-2 border-white",
  lg: "w-60 border-4 border-white",
};
---

<img
  src="/profile_picture.webp"
  alt="Photo de Valentin GEREST"
  class:list={[
    sizes[size],
    "animate-fade-in ease-out-expo aspect-square rounded-full bg-[#e4e4e4] text-transparent shadow-lg dark:border-none",
    className,
  ]}
  {...props}
/>
