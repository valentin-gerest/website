---
import Logo from "../../public/favicon.svg";
import "../styles/global.css";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <slot name="head" />
  </head>

  <body
    class="flex min-h-screen flex-col font-mono dark:bg-neutral-900 dark:text-white"
  >
    <nav class="py-4 sm:py-10">
      <div class="mx-auto flex max-w-5xl items-center justify-between px-3">
        <a href="/">
          <Logo height={40} width={40} />
        </a>
        <ul class="flex items-center gap-4">
          <li>
            <a href="/blog">Blog</a>
          </li>
        </ul>
      </div>
    </nav>
    <slot />
    <footer class="px-3"></footer>
  </body>
</html>
